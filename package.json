  "scripts": {
    "prebuild": "npm run clean:dist",
    "build:dev": "npm run clean:dist && webpack --config configs/webpack.dev.js --progress --profile",
    "build:prod": "npm run clean:dist && webpack --config configs/webpack.prod.js  --progress --profile --bail",
    "build:aot": "./node_modules/.bin/ngc -p tsconfig.aot.json && rollup -c rollup-config.js",
    "build": "npm run build:dev",
    "clean:dist": "rm -rf public coverage",
    "clean": "npm cache clean && npm run clean:dist && rm -rf node_modules",
    "devserver": "webpack-dev-server --config configs/webpack.dev.js --progress --profile --watch --content-base src/",
    "start": "npm run devserver",
    "test": "karma start",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:prod": "npm run build:prod -- --watch",
    "watch:test": "npm run test -- --auto-watch --no-single-run"
  },
